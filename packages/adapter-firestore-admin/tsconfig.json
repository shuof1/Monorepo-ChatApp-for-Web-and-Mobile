{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
