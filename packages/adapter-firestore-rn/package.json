{
  "name": "adapter-firestore-rn",
  "version": "0.0.1",
  "description": "React Native Firebase adapter for sync-engine (online edit/delete minimal).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --out-dir dist --clean --dts --format cjs,esm",
    "watch": "tsup src/index.ts --out-dir dist --watch --dts --format cjs,esm",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@react-native-firebase/app": "^23.0.1",
    "@react-native-firebase/firestore": "^23.0.1",
    "sync-engine": "workspace:*"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react-native": ">=0.73"
  }
}
