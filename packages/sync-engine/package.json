{
  "name": "sync-engine",
  "version": "0.0.1",
  "description": "Platform-agnostic sync engine for chat edit/delete (online mode minimal).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --out-dir dist --clean --dts --format cjs,esm",
    "watch": "tsup src/index.ts --out-dir dist --watch --dts --format cjs,esm",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
